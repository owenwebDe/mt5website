{
  "version": 2,
  "name": "mt5-trading-dashboard",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-on-render.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_BACKEND_URL": "@vite_backend_url"
  },
  "build": {
    "env": {
      "VITE_API_URL": "@vite_api_url",
      "VITE_BACKEND_URL": "@vite_backend_url"
    }
  }
}
